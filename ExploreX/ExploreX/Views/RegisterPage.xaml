<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExploreX.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image Source="icon_register.png" WidthRequest="180" HeightRequest="180"></Image>

            <Entry x:Name="email" Placeholder="E-mail" TextColor="Black" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="password" Placeholder="Password" IsPassword="True" TextColor="Black" PlaceholderColor="Gray"></Entry>
            <Button 
             VerticalOptions="Center"
             Text="Zarejestruj się"
             TextColor="White"
             BackgroundColor="#2196F3"
             BorderWidth="1.5"
             CornerRadius="50"
             Clicked="Button_Clicked"
             ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>